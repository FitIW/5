<UserControl x:Class="HelloWPF.Views.MenuItemUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HelloWPF.Views"
             xmlns:viewModels="clr-namespace:HelloWPF.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:MenuItemVm}"
             d:DesignHeight="300" d:DesignWidth="100">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="{Binding Title}" FontWeight="Bold" />
        <TextBlock Text="{Binding SubTitle}" TextWrapping="Wrap" Width="100" />
    </StackPanel>
</UserControl>